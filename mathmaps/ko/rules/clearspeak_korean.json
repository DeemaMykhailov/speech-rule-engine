{
  "domain": "clearspeak",
  "locale": "ko",
  "modality": "speech",
  "inherits": "base",
  "rules": [
    [
      "Precondition",
      "german-font",
      "default",
      "self::*[@font=\"fraktur\"]",
      "not(contains(@grammar, \"ignoreFont\"))"
    ],
    [
      "Precondition",
      "german-font-bold",
      "default",
      "self::*[@font=\"bold-fraktur\"]",
      "not(contains(@grammar, \"ignoreFont\"))"
    ],
    [
      "Precondition",
      "unit-square",
      "default",
      "self::superscript[@role=\"unit\"]",
      "children/*[2][text()=2]",
      "name(children/*[1])=\"identifier\"",
      "children/*[1][@category=\"unit:length\"]"
    ],
    [
      "Precondition",
      "unit-cubic",
      "default",
      "self::superscript[@role=\"unit\"]",
      "children/*[2][text()=3]",
      "name(children/*[1])=\"identifier\"",
      "children/*[1][@category=\"unit:length\"]"
    ],
    [
      "Precondition",
      "unit-quad",
      "default",
      "self::superscript[@role=\"unit\"]",
      "children/*[2][text()=4]",
      "name(children/*[1])=\"identifier\"",
      "children/*[1][@category=\"unit:length\"]"
    ],
    
    [
      "Precondition",
      "vbar-divides",
      "default",
      "self::punctuated",
      "@role=\"sequence\"",
      "count(./children/*)=3",
      "children/*[2][@role=\"vbar\"]"
    ],
    [
      "Precondition",
      "vbar-always-divides",
      "VerticalLine_Divides",
      "self::punctuated",
      "@role=\"sequence\"",
      "count(./children/*)=3",
      "children/*[2][@role=\"vbar\"]"
    ],
    [
      "Precondition",
      "simple-relation",
      "default",
      "self::relseq",
      "count(./children/*)=2",
      "text()=\"=\" or text()=\"<\" or text()=\">\" or text()=\"≤\" or text()=\"≥\" or text()=\"⊂\" or text()=\"≠\" or text()=\"⇐\" or text()=\"⇒\" or text()=\"⇔\""
    ],
    [
      "Precondition",
      "member-operation-simple",
      "default",
      "self::infixop",
      "count(./children/*)=2",
      "text()=\"∈\" or text()=\"∊\" or text()=\"∋\" or text()=\"∍\" or text()=\"∉\" or text()=\"∌\""
    ],
    [
      "Precondition",
      "parallel-to",
      "default",
      "self::punctuated",
      "count(./children/*)=3",
      "content/*[1][text()]=\"∥\""
    ]
  ]
}
